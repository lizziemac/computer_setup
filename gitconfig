[includeIf "gitdir:~/Projects/**"]
  path = .gitconfig-stratis
[includeIf "gitdir:~/Projects/github/**"]
  path = .gitconfig-rp
[includeIf "gitdir:~/Personal/**"]
  path = .gitconfig-personal


[alias]
	# accepts an argument of <branch name> to show a branch other than the current one
	tree = log --graph --color --date=short --pretty=format:\"%x1b[36m%x1b[1m%h %x1b[35m%cd %x1b[0m%x20%s\"
	# shows entire tree
	bigtree = log --graph --full-history --all --color --date=short --pretty=format:\"%x1b[36m%x1b[1m%h %x1b[35m%cd %x1b[0m%x20%s\"
	unstage = reset HEAD --
	force = push --force-with-lease --force-if-includes
	trim = "!f(){\
        git branch | grep -vE 'master|develop|main' | grep -v ^* | xargs git branch -D;\
    }; f"
[push]
	default = current
[pull]
	rebase = true
[submodule]
	recurse = true
[color]
	ui = auto
[gitreview]
	username = lizziemac
[init]
	defaultBranch = main
